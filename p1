package com.company; import java.util.*; public class pra_1
{
Scanner sc = new Scanner(System.in); static double rad = 1.0;
pra_1()
{

}
 

pra_1(double r)
{
rad = r;
}

public static double getPerimeter()
{
double peri; peri=3.14*2*rad;

return peri;
}

public static double getArea()
{
double area; area=3.14*rad*rad;

return area;
}
}

import java.util.*; public class pra_1_main
{
public static void main(String[] args)
{
Scanner sc = new Scanner(System.in); pra_1 obj = new pra_1();
System.out.println("Default value of radius = " + obj.rad); System.out.println("Enter radius of radius");
double radia = sc.nextDouble();
 

pra_1 obj1 = new pra_1(radia);

double area = obj.getArea(); System.out.println("Area of circle is : " + area);

double peri = obj.getPerimeter(); System.out.println("perimeter of circle is : " + peri);
}
}
